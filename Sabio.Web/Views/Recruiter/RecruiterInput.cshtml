@model Sabio.Web.Models.ViewModels.ItemViewModel<Guid?>
@{
    Layout = "~/Views/Shared/_layoutSantaCruz.cshtml";
}

<!-- Forms start -->
<!-- ============================================================================== -->
<h2>Recruiter Bio</h2>
<form role="form" id="RecruitBio">
    <div class="form-group">
        <label for="experience">Industry experience</label>
        <input type="text" class="form-control" name="Industry" id="Industry" placeholder="">
    </div>
    <div class="form-group">
        <label for="placements">placements per year</label>
        <input type="text" class="form-control" name="placements" id="placements" placeholder="">
    </div>
    <div class="form-group">
        <label for="Type">Type of roles</label>
        <input type="text" class="form-control" name="roles" id="roles" placeholder="">
    </div>
    <div class="form-group">
        <label for="Locations">Locations</label>
        <input type="text" class="form-control" name="Locations" id="Locations" placeholder="">
    </div>
    <div class="form-group">
        <label for="RecruitersWebsite">Recruiters website </label>
        <input type="text" class="form-control" name="website" id="website" placeholder="">
    </div>
    <div class="form-group">
        <label for="CompanyName">Company Name</label>
        <input type="text" class="form-control" name="CompanyName" id="CompanyName" placeholder="">
    </div>
    <div class="form-group">
        <label for="PhoneNumbers">Phone numbers</label>
        <input type="text" class="form-control" name="PhoneNumbers" id="PhoneNumbers" placeholder="">
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control" name="Email" id="Email" placeholder="">
    </div>
    @*<div class="form-group">
        <label for="experience">Cell Phone</label>
        <input type="text" class="form-control" name="Cell" id="Cell" placeholder="">
    </div>*@
    <div class="form-group">

    </div>
    <button type="submit" id="SubmitRecBtn" class="btn btn-default">Submit</button>

    <div class="form-group">
        <label for="experience"></label>
        <input type="hidden" value="@Model.Item" name="RecuiterUID" id="RecuiterUID" placeholder="">
    </div>
</form>

<!-- ERROR MODAL HERE -->
